<UserControl x:Class="Contact_App.View.StatisticsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:t="clr-namespace:Contact_App.Controls"
             xmlns:local="clr-namespace:Contact_App.View"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <t:DashboardTile Margin="20"
                         Header="Number Of Contacts " 
                         Value="{Binding NumberOfContacts}"></t:DashboardTile>
        <t:DashboardTile Grid.Row="1" Margin="20"
                         Header="Favorite Contacts " 
                         Value="{Binding FavoriteContacts}"></t:DashboardTile>
    </Grid>
</UserControl>
